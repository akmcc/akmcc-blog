
    
    <% @posts.each do |post| %>
    <article>

        <h1><%= link_to post.title, post%></h1>
        <div class="date"><%= post.created_at.strftime("%B %d, %Y")%></div>

        <%= simple_format(post.body) %>

        <% if admin_signed_in? %>
        <span class="admin">

          <%= link_to 'Edit', edit_post_path(post) %> |
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Now wait a minute. Are you sure this is what you\'re trying to do?' } %>
        </span>
        <% end %>


      </article>
    <% end %>

      <%= will_paginate @posts %>
